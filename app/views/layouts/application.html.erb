<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render './ui_modules/nav' %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |key, msg| %>
            <div class="text-center alert alert-<%= key == 'success'? 'success' : 'danger' %>">
              <%= msg %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
