<div class="row">
  <div class="col-md-12">
    <%= form_for @article, :html => {class: "form-horizontal", role: "form"} do |f| %>

      <% if @article.errors.any? %>
        <%= render './ui_modules/errors', :object => @article %>
      <% end %>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= f.label :title %>
        </div>
        <div class="col-sm-11">
          <%= f.text_field :title, class: 'form-control', placeholder: "Article Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= f.label :body %>
        </div>
        <div class="col-sm-11">
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Article Content" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
