<% @articles.each do |article| %>
  <div class="panel panel-default">
    <%= link_to article_path(article) do %>
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-8">
            <h2 class="panel-title"><%= article.title %></h2><br />
            <p>By: <%= article.user.email %>&nbsp; <%= time_ago_in_words(article.created_at) %> ago</p>
          </div>
          <div class="col-sm-4">
            <% if user_signed_in? && admin? %>
              <%= link_to "Delete", article_path(article), method: :delete, class: "btn btn-xs btn-danger actibutton", data: { confirm: "Are you sure you want to delete this article?" } %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-info actibutton" %>
              <%= link_to "View", article_path(article), class: "btn btn-xs btn-success actibutton" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= link_to article_path(article) do %>
      <div class="panel-body row">
        <div class="col-sm-12">
          <%= raw (article.body).truncate(1000) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
