<div class="row pic-hero hero">
  <span class="section-title">
    Adventure Stories
  </span>

</div>
<div class="container">
  <br />
  <h2 align="center">Blog Entries</h2><br />
  <% @articles.each do |article| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to article.title, article_path(article) %></h3>
        <span>&nbsp; By: <%= article.user.email %>&nbsp; <%= time_ago_in_words(article.created_at) %> ago</span>
        <% if user_signed_in? && admin? %>
          <%= link_to "Delete", article_path(article), method: :delete, class: "btn btn-xs btn-danger actibutton", data: { confirm: "Are you sure you want to delete this article?" } %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-info actibutton" %>
          <%= link_to "View", article_path(article), class: "btn btn-xs btn-success actibutton" %>

        <% end %>
        <%= admin? %>
      </div>
      <div class="panel-body">
        <%= raw (article.body).truncate(500)  %>
      </div>
    </div>
  <% end %>
</div>
<%= render 'ui_modules/footer' %>
